nav
  a.sidenav-trigger(href='#' data-target='slide-out').hide-on-large
    i.material-icons menu
  .nav-wrapper.indigo
    a.center.brand-logo(href="/") Logo

ul#slide-out.sidenav.sidenav-fixed
  if user
    li
      .user-view
        .background.indigo
        a(href='/profile')
          span.white-text.name= user.local.name
        a(href='/profile')
          span.white-text.email= user.local.email
    li
      a(href="/explore") Explore
    li
      a(href="/playlists") My playlists
    if user.admin
      li
        .divider
      li
        a.subheader Administration
      li
        a(href="/admin/users") Users
      li
        a(href="/admin/songs") Songs
  else
    li.indigo
      a.subheader.white-text Not signed yet
    li
      a(href='/signup') Sign up
    li
      a(href='/signin') Sign in
  li
    .divider
  if user
    li
      a(href="/logout") Log out